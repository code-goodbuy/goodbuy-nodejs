{
  "name": "goodbuy-nodejs",
  "version": "1.0.0",
  "description": "Node JS Api",
  "main": "./dist/server.js",
  "scripts": {
    "docker_build": "docker build -t goodbuy-nodejs-image .",
    "docker_test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "docker_local": "docker-compose -f docker-compose.yml -f docker-compose.local.yml up",
    "docker_dev": "docker-compose up",
    "local": "NODE_ENV=local nodemon ./dist/server.js",
    "dev": "NODE_ENV=dev node ./dist/server.js",
    "prod": "NODE_ENV=default node ./dist/server.js",
    "test": "NODE_ENV=test mocha --timeout 5000"
  },
  "author": "Darjusch Schrand",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "mongodb": "^3.6.4",
    "mongoose": "^5.11.15",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/express": "^4.17.11",
    "@types/express-validator": "^3.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.30",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
